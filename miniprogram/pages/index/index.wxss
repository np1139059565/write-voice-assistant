page, view, editor, button {
    padding: 0;
    margin: 0;
}

.container {
    width: 100vw;
    height: 100vh;
    padding: 0;
    margin: 0;
}

.c-editor {
    height: 50vh;
    width: calc(100% - 4px);
    margin: 2px;
    border: 1px solid;
}

.c-button {
    height: 10vh;
}

.c-tree {
    height: 40vh;
}

.c-absolute {
    width: 100%;
    overflow: auto;
}

.c-dirs {
    width: 100%;
    height: 30vh;
    overflow: auto;
}